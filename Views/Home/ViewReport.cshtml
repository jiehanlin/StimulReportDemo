@using Stimulsoft.Report.Mvc
@using Stimulsoft.Report.Web

@{
    ViewBag.Title = "viewer";
}

@Html.Stimulsoft().StiMvcViewer("StiMvcViewer1", new StiMvcViewerOptions()
{
    Theme = StiViewerTheme.Office2013LightGrayViolet,
    Actions =
    {
        GetReport = "GetReport",
        ViewerEvent = "ViewerEvent",
    },
    Appearance =
    {
        InterfaceType = StiInterfaceType.Auto,
        ParametersPanelDateFormat = "yyyy-MM-dd",
        ParametersPanelColumnsCount = 3
    },
    Toolbar =
    {
        ViewMode = StiWebViewMode.Continuous
    },
    Server =
    {
        PassFormValues = true
    }
})
